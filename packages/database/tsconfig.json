{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "target": "ES2022",
    "module": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",

    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },

  "include": ["src", "generated"]
}
