{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node", // ðŸ”„ Let TS match Node.js behavior
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "declaration": true,
    "removeComments": true,
    "allowJs": false
  },
  "exclude": ["dist", "node_modules"]
}
